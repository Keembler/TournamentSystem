{% extends 'base.html.twig' %}

{% block title %}Tournament{% endblock %}

{% block body %}
    <h1>Tournament</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ tournament.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ tournament.name }}</td>
        </tr>
        <tr>
            <th>Matches</th>
            <td></td>
        </tr>
        </tbody>
    </table>

    {% if tournament.matches %}
    {{ tournament.getScheduleMatches()|raw }}
    {% endif %}

    <a href="{{ path('app_tournament_index') }}">back to list</a>

    {{ include('tournament/_delete_form.html.twig') }}
{% endblock %}
